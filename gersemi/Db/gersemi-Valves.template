  field(INPA, "CstatV-$(SUBS):$(DEV):sAuto")
  field(INPB, "CstatV-$(SUBS):$(DEV):sFlt")
  field(CALC, "A+2*B")
  field(FLNK, "CstatV-$(SUBS):$(DEV):SEV")
}

record (mbbi, "CstatV-$(SUBS):$(DEV):SEV") {
   field (DESC, "PV to propagate the severity")
   field (INP, "CstatV-$(SUBS):$(DEV):VisSev MSS")
   field(VAL, "0")
   field(ZRVL, "0")
   field(ZRST, "MANUAL")
   field(ZRSV, "MINOR")
   field(ONVL, "1")
   field(ONST, "OK")
   field(ONSV, "NO_ALARM")
   field(TWVL, "2")
   field(TWST, "FAULT & MANUAL")
   field(TWSV, "MAJOR")
   field(THVL, "3")
   field(THST, "FAULT")
   field(THSV, "MAJOR")
}

