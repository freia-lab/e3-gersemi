record (calc, "CstatV-Ctrl:Alarms:sGeneral") {
  field(SCAN, "1 second")
  field(INPA, "CstatV-Ctrl:Alarms:sAlarmB1")
  field(INPB, "CstatV-Ctrl:Alarms:sAlarmB10")
  field(INPC, "0x1F")
  field(INPD, "0xFC")
  field(PREC, "10")
  field(CALC, "(A&C)+((B&D)<<8)")
}

